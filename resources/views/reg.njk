{% extends 'master' %}

{% block content %}

<h1>Regisztráció</h1>

{% if old('errors') %}
 <div class="alert alert-danger" role="alert">
     <ul>
     {% for error in old('errors') %}
     <li>{{ error.message }}</li>
     {% endfor %}
     </ul>
 </div>
 {% endif %}

<form class="form-horizontal" action="/reg" method="POST">
  {{ csrfField }}

  <div class="form-group">
    <label for="inputnev" class="col-sm-2 control-label">Felhasználónév</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="inputnev" name ="username" value="{{ old('username')}}">
    </div>
</div>

<div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label">E-mail</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="inputEmail" name ="email" value="{{old('email')}}">
    </div>
</div>

<div class="form-group">
    <label for="inputJelszo" class="col-sm-2 control-label">Jelszó</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inputJelszo" name ="password">
    </div>
</div>

<div class="form-group">
    <label for="inputJelszo" class="col-sm-2 control-label">Jelszó újra</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="inpitJelszo" name ="password_again">
    </div>
</div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Regisztráció</button>
    </div>
  </div>
</form>
{% endblock %}